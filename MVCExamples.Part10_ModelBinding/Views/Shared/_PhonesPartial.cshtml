$(document).ready(function() {
    $("#AddFavorite").click(function () {
        $.get(getFavoritesPath, function (data) {
            $("#FavoritesPlaceHolder").append(data);
            $("#FavoritesPlaceHolder :last-child").focus();
        });
    });

    $("#AddPhones").click(function () {
        var newIndex;

        if ($(".indexer input").last().val() !== undefined) {
            newIndex = parseInt($(".indexer input").last().val(), 10) + 1;
        } else {
            newIndex = 0;
        }

        var getPhonesPathNew = (newIndex !== 0) ? `${getPhonesPath}/${newIndex}` : getPhonesPath;

        $.get(getPhonesPathNew, function (data) {
            $("#PhonesPlaceHolder").append(data);
            $("#PhonesPlaceHolder :last-child").focus();
        });
    });
});
